<section>
	{% for post in postslist | reverse %}
	  <div class="content is-medium" >
	    <div class=box>
		<article{% if post.url == url %} data-current="current item"{% endif %}>
			<div class="has-background-info-light">
				<a class="button has-background-primary-light is-fullwidth" href="{{ post.url | url }}">
					{% if post.data.summary %}
						{{ post.data.summary }} 
					{% else %}
						Untitled
					{% endif %}
				</a>
			</div>
			
			{% if post.data.title %}
				<p>
					{{ post.data.title }}
				</p>
			{% endif %}
			<p>
				<time datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | readableDate }} by <a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a></small>
				</time>
			</p>
			{% if post.data.tags %}
				<div class="button">
					{% for tag in post.data.tags %}
		  			{%- if tag != "post" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
		  			{%- endif -%}
					{% endfor %}
				</div>
			{% endif %}
		</article>
	    </div>
	  </div>
	{% endfor %}
</section>
