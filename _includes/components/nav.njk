

<nav class="navbar" role="navigation" aria-label="main navigation">
  {% set navPages = collections.all | eleventyNavigation %}
  <div class="navbar-brand">
    <a class="navbar-item" href="/">  
    {% if '/posts' in page.url %} 
      {% set xImgUrl = "../../static/img/logo27.png" %}
    {% else %} 
      {% set xImgUrl = "../static/img/logo27.png" %}
    {% endif %}  
    <img src={{xImgUrl}} width="112" height="28">
    </a>
  </div>

  <div id="navbarBasicExample" class="navbar-menu is-active">
    <div class="navbar-start">
     {%- for entry in navPages %}
     {% if entry.url == page.url %}     {% set xClass = "is-active" %}  {% else %}  {% set xClass = "blabber" %}    {% endif %}
      <a class="navbar-item is-tab {{ xClass }} " href="{{ entry.url | url }}"{% if entry.url == page.url %} data-current="current item"{% endif %}>{{ entry.title }}</a>
    {%- endfor %}
  </div>
   
</nav>
