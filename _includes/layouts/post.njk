---
layout: layouts/base.njk
section: post
---

<article>
  <h5>{{ title }}</h5>
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> by <a href="/authors/{{ author | slug }}/">{{ author }}</a>
    </small>
  </p>
  <content>
    <h5>{{ summary }}</h5>
    {{ layoutContent | safe }}
  </content>

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a class="button is-small is-rounded has-background-info-light has-textweight-semibold"  href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>
<br>
<div>
  <a class="button has-background-link has-textweight-semibold" href="{{ '/blog/' | url }}#{{ title }}" >‚Üê Blog Index</a>
</div>
